@layout('layout.app')

@section('content')
  <h1>Tasks</h1>
  <a href="{{ route('tasks.create') }}">Nova Tarefa</a>
  <ul>
    @each(task in tasks)
      <li>
        <a href="{{ route('tasks.show', { id: task.id }) }}">
          @if(task.done)
            <del>{{ task.title }}</del>
          @else
            {{ task.title }}
          @endif
        </a>
        <a href="{{ route('tasks.done', { id: task.id }) }}">
          [X]
        </a>
      </li>
    @endeach
  </ul>
@endsection
